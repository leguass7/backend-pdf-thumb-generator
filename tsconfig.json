{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",                                
    "module": "commonjs",                           
    "allowJs": true,                             
    "sourceMap": true,                           
    "outDir": "./build",                         
    /* Strict Type-Checking Options */
    "strict": false,                              
    "noImplicitAny": true,                       
    /* Module Resolution Options */
    "moduleResolution": "node",                  
    "baseUrl": "./",                          
    "rootDir": "./src",
    "esModuleInterop": true,     
    "resolveJsonModule": true,
    "isolatedModules": true,                
    /* Advanced Options */
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true     
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
